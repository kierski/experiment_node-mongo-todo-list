<form action="/todo/add" method="post">
  <div class="form-group">
    <input class="form-control" type="text" name="text" placeholder="Add task">
  </div>
  <div class="form-group">
    <textarea class="form-control" placeholder="Add description of task" name="body"></textarea>
  </div>
  <button class="btn btn-info" type="submit">Submit</button>
</form>
